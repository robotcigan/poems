@import '../helpers/variables.styl'

*
  box-sizing border-box
  text-decoration none
  &:focus
    outline 0

*:hover
  text-decoration none

*:focus
  outline 0

a
  color inherit
  text-decoration none

.link
  border-bottom 1px solid rgba($primary, .3)
  color $primary
  display inline-block
  cursor pointer
  font-weight 600
  position relative
  text-decoration none
  transition all .3s
  &:after
    background-color $primary
    bottom -1px
    content ''
    height 1px
    left 0
    position absolute
    transition all .3s ease
    width 0
  &:hover
    color $primary - 10%
    &:after
      width 100%


html
  font-size 62.5%
  margin 0
  max-width 100%
  padding 0
  width 100%

body
  color $main
  background #fff
  font-family $font
  font-weight 400
  font-size 1.6em
  line-height 1
  margin 0
  max-width 100%
  padding 0
  text-size-adjust 100%
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  width 100%
  *
    box-sizing border-box
    

.svg
  opacity 0

.replaced-svg
  opacity 1


    